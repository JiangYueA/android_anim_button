<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <com.anim.button.widget.button.AnimImageView
                android:id="@+id/img_anim_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:firstDraw="@drawable/ic_heart"
                app:secondDraw="@drawable/ic_heart_fill" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <com.anim.button.widget.button.FillPopImageView
                android:id="@+id/img_fill_button"
                android:layout_width="46dp"
                android:layout_height="46dp"
                app:firstView="@drawable/fill_circle_bg"
                app:secondView="@drawable/fill_circle_fill_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <com.anim.button.widget.button.FadePopImageView
                android:id="@+id/img_fade_button"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="èµž"
                    android:textColor="#aaaaaa"
                    android:textSize="10sp" />
            </com.anim.button.widget.button.FadePopImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <com.anim.button.widget.button.RippleImageView
                android:id="@+id/img_ripple_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:rb_color="#ea4b2b"
                app:rb_duration="3000"
                app:rb_radius="8dp"
                app:rb_rippleAmount="6"
                app:rb_scale="3.2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="click"
                    android:textColor="#aaaaaa"
                    android:textSize="10sp" />
            </com.anim.button.widget.button.RippleImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <com.anim.button.widget.button.TransitionImageView
                android:id="@+id/img_transition_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00aaaaaa" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_fund_cell"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fund_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="标题10923"
        android:textColor="#aaaaaa"
        android:textSize="12sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/tv_fund_rate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="5.6%"
        android:textColor="#ea4b2b"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_fund_describe"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="标题2"
        android:textColor="#aaaaaa"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_fundhome_purchase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ea4b2b"
        android:gravity="center"
        android:padding="5dp"
        android:text="按钮操作"
        android:textColor="#ffffff"
        android:textSize="13sp" />

</LinearLayout>